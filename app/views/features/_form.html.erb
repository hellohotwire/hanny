
<%= form_with(model: feature) do |form| %>
  <div class="p-4">
    <%= render "shared/error_messages", resource: form.object %>

    <div class="mb-3">
      <%= form.label :title, class: "sr-only" %>
      <%= form.text_field :title, class: "appearance-none text-base font-normal py-2 block w-full rounded-md focus:ring-none focus:shadow-none focus:border-none focus:outline-none", placeholder: "Short, descriptive title", autofocus: true %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label mb-0" %>
      <%= form.text_area :description, class: "appearance-none text-base font-normal py-2 block w-full rounded-md focus:ring-none focus:shadow-none focus:border-none focus:outline-none", placeholder: "Any additional details" %>
    </div>
  </div>

  <div class="flex items-center gap-6 justify-end w-full bg-slate-50 border-t p-3">
    <%= form.submit "Create post", class: "btn btn-primary" %>
  </div>
<% end %>
