<div class="max-w-5xl rounded mx-auto px-4 mt-10">
  <div class="grid grid-cols-1 md:grid-cols-12 bg-white">
    <aside class="md:col-span-3 md:p-6">
      <h3 class="font-semibold text-xs uppercase mb-3">Category</h3>

      <ul class="-mx-3 space-y-2">
        <li>
          <%= link_to "Products", "#", class: "px-3 py-1 rounded-md hover:bg-slate-50 block" %>
        </li>
        <li>
          <%= link_to "Features", "#", class: "px-3 py-1 rounded-md hover:bg-slate-50 block" %>
        </li>
        <li>
          <%= link_to "Bugs", "#", class: "px-3 py-1 rounded-md hover:bg-slate-50 block" %>
        </li>
        <li>
          <%= link_to "Other", "#", class: "px-3 py-1 rounded-md hover:bg-slate-50 block" %>
        </li>
      </ul>
    </aside>

    <div class="md:col-span-9 md:p-8">
      <h1 class="font-bold text-xl tracking-tight text-slate-800 mb-3">Features</h1>

      <div class="rounded border mb-6">
        <%= render "features/form", feature: @feature %>
      </div>

      <div class="flex items-center gap-6 justify-between w-full bg-slate-50 rounded-t border p-4">
        <div class="flex gap-3 items-center">
          Showing <select class="form-select w-full">
            <option  value="popular" selected>Popular</option>
            <option value="new">New</option>
            <option value="in_progress">In Progress</option>
            <option value="done">Done</option>
          </select>
          posts
        </div>

        <div>
          <label for="search" class="sr-only">Search</label>
          <input type="search" class="form-input" placeholder="Search">
        </div>
      </div>

      <div id="features" class="border-x border-b rounded-b divide-y">
        <%= render @features %>
      </div>
    </div>
  </div>
</div>
