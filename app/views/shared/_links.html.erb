<% if user_signed_in? %>
  <div class="flex gap-6 items-center">
    <p class="text-sm"><%= current_user.email %></p>
    <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "underline text-sky-500 hover:text-sky-600 font-medium" %>
  </div>
<% else %>
  <%= link_to "Sign in", new_user_session_path, class: "underline text-sky-500 hover:text-sky-600 font-medium" %>
<% end %>
